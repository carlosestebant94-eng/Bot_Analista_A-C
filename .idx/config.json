{
  "workspaceLayout": {
    "notebooks": [
      {
        "path": "README.md"
      }
    ],
    "leftPanel": {
      "open": true
    }
  },
  "runConfigurations": [
    {
      "type": "bash",
      "label": "Ejecutar Bot",
      "command": ". venv/bin/activate && python main.py"
    },
    {
      "type": "bash",
      "label": "Instalar Dependencias",
      "command": "pip install -r requirements.txt"
    },
    {
      "type": "bash",
      "label": "Ejecutar Pruebas",
      "command": ". venv/bin/activate && python -m pytest test_bot.py -v"
    }
  ],
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter"
  ]
}
